<%= form_for [user, item], remote: true do |f| %>

   
   <div class="form-group">
     <%= f.label :task %>
     <%= f.text_field :task, class: 'form-control', placeholder: "Add to-do item" %>
   </div>
   
   <div class="form-group">
     <%= f.label :rank %>
     <%= f.text_field :rank, class: 'form-control', placeholder: "Add to-do item" %>
   </div>
   
   <div class="field">
            <%= f.check_box :completed %>
            <%= f.label :completed %>
          </div>
   
   
   <div class="form-group">
     <%= f.submit "Add", class: 'btn btn-success' %>
   </div>
     
<% end %>
<div class="row">
    <div class="col-md-8.col-md-offset-2">
        <div class="media">
        <br />
            <div class="media-body">
                <div class="page-header">
                    <h1 class="text-center"><%= current_user.username.capitalize! %>'s <small>To-Do List</small></h1><br />
                </div>
            <div class="col-md-6 col-md-offset-3">
            <div class='js-items'>
                <%= render @user.items %>
            </div>
            
            <% if current_user %>
                <div class="new-item">
                    <%= render 'items/form', item: Item.new, user: @user %>
                </div>
            <% end %>
            </div>
            </div>
        </div>
    </div>
</div>